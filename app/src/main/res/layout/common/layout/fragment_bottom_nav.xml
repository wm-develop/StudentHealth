<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".ui.common.MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/health"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:drawableTop="@drawable/jiankang"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/health"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/ripple_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/community"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:drawableTop="@drawable/shequ"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/community"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/health"
        app:rippleColor="@color/ripple_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shop"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:drawableTop="@drawable/shangcheng"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/shop"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/community"
        app:rippleColor="@color/ripple_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/schedule"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:drawableTop="@drawable/jihua"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/schedule"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shop"
        app:rippleColor="@color/ripple_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/individuality"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:drawableTop="@drawable/wode"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/individuality"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/schedule"
        app:rippleColor="@color/ripple_color" />

</androidx.constraintlayout.widget.ConstraintLayout>